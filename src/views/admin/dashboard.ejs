<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Redirect V2</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body { background-color: #f8f9fa; font-family: 'Segoe UI', sans-serif; }
        .card-stat { transition: transform 0.2s; border: none; }
        .card-stat:hover { transform: translateY(-5px); }
    </style>
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-4 shadow-sm mb-4">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="/"><i class="fas fa-rocket me-2"></i>REDIRECT PRO V2</a>
            <div class="d-flex text-white align-items-center">
                <div class="me-3">
                    <small class="text-white-50">User:</small> <b><%= user.username %></b>
                </div>
                <a href="/logout" class="btn btn-sm btn-outline-light">Đăng xuất <i class="fas fa-sign-out-alt ms-1"></i></a>
            </div>
        </div>
    </nav>
    <% if (user.role_name === 'super_admin' || user.role_name === 'admin') { %>
    <div class="container mb-3">
        <a href="/users" class="btn btn-dark w-100"><i class="fas fa-users-cog me-2"></i> Quản trị Người dùng & Phân quyền</a>
    </div>
    <% } %>

    <div class="container">
        <div class="row mb-4 g-3">
            <div class="col-md-4">
                <div class="card card-stat text-white bg-primary shadow-sm h-100">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 text-uppercase fw-bold">Domains</h6>
                            <h2 class="mb-0 fw-bold"><%= stats.total_domains || 0 %></h2>
                        </div>
                        <i class="fas fa-globe fa-3x opacity-25"></i>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card card-stat text-white bg-success shadow-sm h-100">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 text-uppercase fw-bold">Chiến dịch (Links)</h6>
                            <h2 class="mb-0 fw-bold"><%= stats.total_links || 0 %></h2>
                        </div>
                        <i class="fas fa-link fa-3x opacity-25"></i>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card card-stat text-white bg-dark shadow-sm h-100">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 text-uppercase fw-bold">Tổng Traffic</h6>
                            <h2 class="mb-0 fw-bold"><%= stats.total_traffic || 0 %></h2>
                        </div>
                        <i class="fas fa-chart-line fa-3x opacity-25"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow border-0">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h5 class="mb-0 text-primary fw-bold"><i class="fas fa-list me-2"></i>Danh sách Domain vệ tinh</h5>
                <button class="btn btn-primary shadow-sm" data-bs-toggle="modal" data-bs-target="#addDomainModal">
                    <i class="fas fa-plus me-1"></i> Thêm Domain
                </button>
            </div>
            <div class="card-body p-0 table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">ID</th>
                            <th>Domain URL</th>
                            <th>Giao diện sạch</th>
                            <th>Trạng thái</th>
                            <th>Links</th>
                            <th class="text-end pe-4">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (domains.length===0) { %>
                            <tr><td colspan="6" class="text-center py-5 text-muted">Chưa có domain nào. Hãy thêm mới!</td></tr>
                        <% } %>
                        <% domains.forEach(d=> { %>
                            <tr>
                                <td class="ps-4 text-muted">#<%= d.id %></td>
                                <td>
                                    <a href="http://<%= d.domain_url %>" target="_blank" class="fw-bold text-decoration-none text-dark">
                                        <%= d.domain_url %> <i class="fas fa-external-link-alt small text-muted ms-1"></i>
                                    </a>
                                </td>
                                <td><span class="badge bg-light text-dark border"><%= d.safe_template %></span></td>
                                <td>
                                    <% if(d.status==='active' ) { %>
                                        <span class="badge bg-success"><i class="fas fa-check-circle me-1"></i>Hoạt động</span>
                                    <% } else { %>
                                        <span class="badge bg-danger"><i class="fas fa-ban me-1"></i>Đã tắt</span>
                                    <% } %>
                                </td>
                                <td>
                                    <span class="badge bg-primary">Tổng: <%= d.link_count || 0 %></span>
                                    <span class="badge bg-success">ON: <%= d.link_active || 0 %></span>
                                    <span class="badge bg-secondary">OFF: <%= (d.link_count||0) - (d.link_active||0) %></span>
                                </td>
                                <td class="text-end pe-4">
                                    <a href="/domains/toggle/<%= d.id %>" class="btn btn-sm <%= d.status === 'active' ? 'btn-outline-danger' : 'btn-outline-success' %> me-1"><i class="fas fa-power-off"></i></a>
                                    <a href="/domains/<%= d.id %>" class="btn btn-sm btn-primary px-3">Quản lý Link</a>
                                    <% if (user.role_name==='super_admin' ) { %>
                                        <a href="/domains/delete/<%= d.id %>" class="btn btn-sm btn-danger ms-1" onclick="return confirm('Cảnh báo: Xóa domain sẽ xóa tất cả link bên trong. Tiếp tục?')"><i class="fas fa-trash"></i></a>
                                    <% } %>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="modal fade" id="addDomainModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <form class="modal-content" action="/domains/create" method="POST">
                <div class="modal-header bg-light">
                    <h5 class="modal-title fw-bold">Thêm Domain Mới</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Domain URL</label>
                        <div class="input-group">
                            <span class="input-group-text">http://</span>
                            <input type="text" name="domain_url" class="form-control" required placeholder="news24h.com">
                        </div>
                        <div class="form-text">Chỉ nhập tên miền, không nhập http/https.</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Giao diện Safe Page</label>
                        <select name="safe_template" class="form-select">
                            <option value="news">Mẫu News</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">Lưu Domain</button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
