<!DOCTYPE html>
<html lang="vi">
<head>
    <title>Lịch sử log - <%= camp.name %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <%- include('../partials/header', {
        user,
        active: 'redirect',
        backUrl: '/campaigns/' + camp.id + '/report',
        breadcrumb: [
            { label: 'Redirect', url: '/redirect' },
            { label: 'Chiến dịch: ' + camp.name, url: '/campaigns/' + camp.id + '/report' },
            { label: 'Log' }
        ]
    }) %>
    <div class="container bg-white p-4 rounded shadow-sm mt-3">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <h4 class="mb-0">Lịch sử log: <span class="text-primary"><%= camp.name %></span></h4>
                <small class="text-muted">ID: <%= camp.id %></small>
            </div>
            <div></div>
        </div>
        <form class="row g-2 mb-3" method="GET">
            <div class="col-auto">
                <label class="form-label">Action</label>
                <select name="action" class="form-select form-select-sm">
                    <option value="" <%= !action ? 'selected' : '' %>>Tất cả</option>
                    <option value="redirect" <%= action==='redirect' ? 'selected' : '' %>>redirect</option>
                    <option value="safe_page" <%= action==='safe_page' ? 'selected' : '' %>>safe_page</option>
                    <option value="safe_page_wrong_country" <%= action==='safe_page_wrong_country' ? 'selected' : '' %>>wrong_country</option>
                    <option value="safe_page_wrong_param_val" <%= action==='safe_page_wrong_param_val' ? 'selected' : '' %>>wrong_param_val</option>
                    <option value="safe_page_missing_param" <%= action==='safe_page_missing_param' ? 'selected' : '' %>>missing_param</option>
                </select>
            </div>
            <div class="col-auto">
                <label class="form-label">Từ ngày</label>
                <input type="date" name="start_date" value="<%= start ? new Date(start).toISOString().slice(0,10) : '' %>" class="form-control form-control-sm">
            </div>
            <div class="col-auto">
                <label class="form-label">Đến ngày</label>
                <input type="date" name="end_date" value="<%= end ? new Date(end).toISOString().slice(0,10) : '' %>" class="form-control form-control-sm">
            </div>
            <div class="col-auto">
                <label class="form-label">Số dòng</label>
                <input type="number" name="limit" value="<%= limit %>" min="50" max="2000" class="form-control form-control-sm">
            </div>
            <div class="col-auto align-self-end">
                <button class="btn btn-primary btn-sm" type="submit">Lọc</button>
            </div>
        </form>
        <div class="table-responsive">
            <table class="table table-sm table-striped table-hover table-log">
                <thead class="table-dark">
                    <tr>
                        <th>Thời gian (VN)</th>
                        <th>IP</th>
                        <th>Quốc gia</th>
                        <th>Thiết bị / OS</th>
                        <th>Trạng thái</th>
                        <th>Lý do</th>
                        <th>Referer</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(logs.length===0) { %><tr><td colspan="7" class="text-center text-muted">Không có log</td></tr><% } %>
                    <% logs.forEach(log => { const meta = log.meta || {}; %>
                        <tr>
                            <td><%= new Date(log.created_at).toLocaleString('vi-VN', { timeZone: 'Asia/Ho_Chi_Minh' }) %></td>
                            <td class="font-monospace"><%= log.ip %></td>
                            <td><span class="badge bg-info text-dark"><%= log.country %></span></td>
                            <td><%= log.device_type || 'PC' %> / <%= log.os_name || 'Unknown' %></td>
                            <td><span class="badge <%= log.action === 'redirect' ? 'bg-success' : 'bg-danger' %> badge-status"><%= log.action === 'redirect' ? 'PASS' : 'FAIL' %></span></td>
                            <td>
                                <% if(log.action === 'redirect') { %>
                                    <span class="text-success small">Chuyển hướng OK</span>
                                <% } else if (log.action === 'safe_page_inactive') { %>
                                    <span class="text-warning small">Link đang tắt</span>
                                <% } else if (log.action === 'safe_page_wrong_country') { %>
                                    <span class="text-danger small">Sai quốc gia</span>
                                    <% if (meta.detail) { %><div class="text-muted small">Chi tiết: <%= meta.detail %></div><% } %>
                                <% } else if (log.action === 'safe_page_wrong_param_val' || log.action === 'safe_page_missing_param') { %>
                                    <span class="text-danger small">Tham số sai/thiếu</span>
                                    <% if (meta.detail) { %><div class="text-muted small">Chi tiết: <%= meta.detail %></div><% } %>
                                <% } else { %>
                                    <span class="text-muted small">Trang safe</span>
                                <% } %>
                            </td>
                            <td class="text-truncate" style="max-width: 220px;" title="<%= meta.url || meta.ref || log.referer %>">
                                <% if (meta.url || meta.ref) { %>
                                    <button class="btn btn-link btn-sm p-0 text-decoration-none" type="button" data-bs-toggle="modal" data-bs-target="#urlModal<%= log.id %>">
                                        <i class="fa-regular fa-eye me-1"></i><%= meta.ref || meta.url || 'Xem URL' %>
                                    </button>
                                    <div class="modal fade" id="urlModal<%= log.id %>" tabindex="-1" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h6 class="modal-title">Chi tiết URL</h6>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <div class="mb-2"><b>Referrer:</b><br><code class="text-break d-block small" style="word-break: break-all; white-space: normal;"><%= meta.ref || '-' %></code></div>
                                                    <div class="mb-2"><b>Request URL:</b><br><code class="text-break d-block small" style="word-break: break-all; white-space: normal;"><%= meta.url || '-' %></code></div>
                                                    <% if (meta.detail) { %><div class="alert alert-warning py-2 mb-0 small"><b>Chi tiết:</b> <%= meta.detail %></div><% } %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <% } else { %>
                                    <div><%= log.referer || '-' %></div>
                                <% } %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
    <%- include('../partials/footer') %>
</body>
</html>
