<!DOCTYPE html>
<html lang="vi">
<head>
    <title>Báo cáo - <%= camp.name %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>.table-log td{font-size:0.85rem;vertical-align:middle}.badge-status{min-width:60px}</style>
</head>
<body>
    <%- include('../partials/header', {
        user,
        active: 'redirect',
        backUrl: '/domains/' + camp.domain_id,
        breadcrumb: [
            { label: 'Redirect', url: '/redirect' },
            { label: 'Domain #' + camp.domain_id, url: '/domains/' + camp.domain_id },
            { label: camp.name }
        ]
    }) %>
    <div class="container bg-white p-4 rounded shadow-sm mt-3">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                <h3 class="mb-1">Báo cáo: <span class="text-primary"><%= camp.name %></span></h3>
                <small class="text-muted">ID: <%= camp.id %> | Domain: <%= camp.domain_id %></small><br>
                <small class="text-muted">Khoảng: <%= rangeLabel %></small>
            </div>
            <div class="d-flex gap-2 align-items-center">
                <% if (user.role_name === 'super_admin') { %>
                <a href="/admin/system" class="btn btn-sm btn-outline-warning">System</a>
                <% } %>
                <form class="d-flex align-items-center" method="GET">
                    <select class="form-select form-select-sm me-2" name="range" onchange="toggleCustom(this.value)">
                        <option value="today" <%= range==='today' ? 'selected' : '' %>>Hôm nay</option>
                        <option value="7d" <%= range==='7d' ? 'selected' : '' %>>7 ngày</option>
                        <option value="week" <%= range==='week' ? 'selected' : '' %>>Tuần này</option>
                        <option value="month" <%= range==='month' ? 'selected' : '' %>>Tháng này</option>
                        <option value="custom" <%= range==='custom' ? 'selected' : '' %>>Chọn ngày</option>
                    </select>
                    <input type="date" class="form-control form-control-sm me-2" name="start_date" id="startDate" value="<%= (range==='custom' && start) ? new Date(start).toISOString().slice(0,10) : '' %>" style="<%= range==='custom' ? '' : 'display:none;' %>">
                    <input type="date" class="form-control form-control-sm me-2" name="end_date" id="endDate" value="<%= (range==='custom' && end) ? new Date(end).toISOString().slice(0,10) : '' %>" style="<%= range==='custom' ? '' : 'display:none;' %>">
                    <button class="btn btn-primary btn-sm" type="submit">Lọc</button>
                </form>
                <a href="/campaigns/<%= camp.id %>/report/export" class="btn btn-outline-primary btn-sm"><i class="fas fa-file-export me-1"></i>Xuất CSV</a>
            </div>
        </div>

        <div class="row g-3 mb-4">
            <div class="col-md-3"><div class="card shadow-sm"><div class="card-body"><div class="text-muted">Redirect</div><h3 class="text-success fw-bold"><%= summary.redirects || 0 %></h3></div></div></div>
            <div class="col-md-3"><div class="card shadow-sm"><div class="card-body"><div class="text-muted">Safe</div><h3 class="text-danger fw-bold"><%= summary.safe || 0 %></h3></div></div></div>
            <div class="col-md-3"><div class="card shadow-sm"><div class="card-body"><div class="text-muted">Pass rate</div><h3 class="fw-bold"><%= summary.pass_rate || 0 %>%</h3></div></div></div>
            <div class="col-md-3"><div class="card shadow-sm"><div class="card-body"><div class="text-muted">Tăng trưởng</div><h3 class="fw-bold <%= summary.redirect_growth >=0 ? 'text-success' : 'text-danger' %>"><%= summary.redirect_growth===null ? 'N/A' : summary.redirect_growth + '%' %></h3></div></div></div>
        </div>

        <div class="row g-4 mb-4">
            <div class="col-lg-8">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-white"><b>Traffic</b></div>
                    <div class="card-body"><canvas id="trafficChart" height="120"></canvas></div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-white"><b>Top quốc gia</b></div>
                    <div class="card-body p-0">
                        <table class="table table-sm mb-0">
                            <thead><tr><th>Quốc gia</th><th class="text-end">Hit</th><th class="text-end">Pass</th></tr></thead>
                            <tbody>
                                <% if(!countryStats || countryStats.length === 0) { %>
                                    <tr><td colspan="3" class="text-center text-muted py-3">Chưa có dữ liệu</td></tr>
                                <% } %>
                                <% countryStats && countryStats.forEach(c => { %>
                                    <tr><td><%= c.country || 'N/A' %></td><td class="text-end"><%= c.hits %></td><td class="text-end"><%= c.redirects %></td></tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="mb-4">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h5 class="mb-0">Bảng thống kê (<%= range %>)</h5>
            </div>
            <table class="table table-bordered text-center">
                <thead class="table-light"><tr><th>Ngày</th><th class="text-success">Redirect</th><th class="text-danger">Safe</th><th>Pass %</th></tr></thead>
                <tbody>
                    <% if(stats.length === 0) { %><tr><td colspan="4" class="text-center text-muted">Chưa có dữ liệu</td></tr><% } %>
                    <% stats.forEach(s => { const redirects = Number(s.redirects || 0); const safe = Number(s.safe || 0); const total = redirects + safe; const rate = total ? Math.round((redirects/total)*1000)/10 : 0; const d = new Date(s.day); const dateLabel = d.toLocaleDateString('vi-VN', { timeZone: 'Asia/Ho_Chi_Minh' }); const timeLabel = range === 'today' ? d.toLocaleTimeString('vi-VN', { hour: '2-digit', minute: '2-digit', timeZone: 'Asia/Ho_Chi_Minh' }) : null; %>
                        <tr>
                            <td>
                                <div><%= dateLabel %></div>
                                <% if (timeLabel) { %><div class="text-muted small"><%= timeLabel %></div><% } %>
                            </td>
                            <td class="text-success fw-bold"><%= s.redirects || 0 %></td>
                            <td class="text-danger fw-bold"><%= s.safe || 0 %></td>
                            <td><%= rate %>%</td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <div>
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h5 class="mb-0">Log mới (50)</h5>
                <a href="/campaigns/<%= camp.id %>/logs" class="btn btn-link btn-sm">Xem tất cả</a>
            </div>
            <div class="table-responsive">
                <table class="table table-sm table-striped table-hover table-log">
                    <thead class="table-dark"><tr><th>Thời gian (VN)</th><th>IP</th><th>Quốc gia</th><th>Thiết bị / OS</th><th>Trạng thái</th><th>Lý do</th><th>Referer</th></tr></thead>
                    <tbody>
                        <% logs.forEach(log => { const meta = log.meta || {}; %>
                            <tr>
                                <td><%= new Date(log.created_at).toLocaleString('vi-VN', { timeZone: 'Asia/Ho_Chi_Minh' }) %></td>
                                <td class="font-monospace"><%= log.ip %></td>
                                <td><span class="badge bg-info text-dark"><%= log.country %></span></td>
                                <td><%= log.device_type || 'PC' %> / <%= log.os_name || 'Unknown' %></td>
                                <td><span class="badge <%= log.action === 'redirect' ? 'bg-success' : 'bg-danger' %> badge-status"><%= log.action === 'redirect' ? 'PASS' : 'FAIL' %></span></td>
                                <td>
                                    <% if(log.action === 'redirect') { %>
                                        <span class="text-success small">Chuyển hướng OK</span>
                                    <% } else if (log.action === 'safe_page_inactive') { %>
                                        <span class="text-warning small">Link đang tắt</span>
                                    <% } else if (log.action === 'safe_page_wrong_country') { %>
                                        <span class="text-danger small">Sai quốc gia</span>
                                        <% if (meta.detail) { %><div class="text-muted small">Chi tiết: <%= meta.detail %></div><% } %>
                                    <% } else if (log.action === 'safe_page_wrong_param_val' || log.action === 'safe_page_missing_param') { %>
                                        <span class="text-danger small">Tham số sai/thiếu</span>
                                        <% if (meta.detail) { %><div class="text-muted small">Chi tiết: <%= meta.detail %></div><% } %>
                                    <% } else { %>
                                        <span class="text-muted small">Trang safe</span>
                                    <% } %>
                                </td>
                                <td class="text-truncate" style="max-width: 150px;" title="<%= meta.url || meta.ref || log.referer %>">
                                    <% if (meta.url || meta.ref) { %>
                                        <button class="btn btn-link btn-sm p-0 text-decoration-none" type="button" data-bs-toggle="modal" data-bs-target="#urlModalTop<%= log.id %>">
                                            <i class="fa-regular fa-eye me-1"></i><%= meta.ref || meta.url || 'Xem URL' %>
                                        </button>
                                        <div class="modal fade" id="urlModalTop<%= log.id %>" tabindex="-1" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h6 class="modal-title">Chi tiết URL</h6>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="mb-2"><b>Referrer:</b><br><code class="text-break d-block small" style="word-break: break-all; white-space: normal;"><%= meta.ref || '-' %></code></div>
                                                        <div class="mb-2"><b>Request URL:</b><br><code class="text-break d-block small" style="word-break: break-all; white-space: normal;"><%= meta.url || '-' %></code></div>
                                                        <% if (meta.detail) { %><div class="alert alert-warning py-2 mb-0 small"><b>Chi tiết:</b> <%= meta.detail %></div><% } %>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    <% } else { %>
                                        <div><%= log.referer || '-' %></div>
                                    <% } %>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        function toggleCustom(val) {
            const show = val === 'custom';
            document.getElementById('startDate').style.display = show ? '' : 'none';
            document.getElementById('endDate').style.display = show ? '' : 'none';
        }
        const statsData = <%- JSON.stringify(stats || []) %>;
        const isToday = '<%= range %>' === 'today';
        const labels = statsData.map(s => {
            const d = new Date(s.day);
            return isToday
                ? d.toLocaleTimeString('vi-VN', { hour: '2-digit' }) + ':00'
                : d.toLocaleDateString('vi-VN');
        });
        const redirectSeries = statsData.map(s => s.redirects || 0);
        const safeSeries = statsData.map(s => s.safe || 0);
        const ctx = document.getElementById('trafficChart');
        if (ctx && statsData.length) {
            new Chart(ctx, { type: 'line', data: { labels, datasets: [{ label: 'Redirect', data: redirectSeries, borderColor: '#28a745', backgroundColor: 'rgba(40,167,69,0.1)', tension: 0.3 }, { label: 'Safe', data: safeSeries, borderColor: '#dc3545', backgroundColor: 'rgba(220,53,69,0.1)', tension: 0.3 }] }, options: { responsive: true, plugins: { legend: { display: true } }, scales: { y: { beginAtZero: true } } } });
        }
        toggleCustom('<%= range %>');
    </script>
    <%- include('../partials/footer') %>
</body>
</html>
