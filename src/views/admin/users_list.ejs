<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Quản lý Người dùng</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <%- include('../partials/header', {
        user,
        active: 'users',
        backUrl: '/redirect',
        breadcrumb: [
            { label: 'Quản trị', url: '/users' },
            { label: 'Người dùng' }
        ]
    }) %>
    <div class="container mt-3">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="mb-0">Người dùng</h3>
            <div></div>
        </div>
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white fw-bold">Danh sách</div>
            <div class="card-body p-0">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr><th>#</th><th>Tài khoản</th><th>Role</th><th>Trạng thái</th><th>Ngày tạo</th><th class="text-end">Hành động</th></tr>
                    </thead>
                    <tbody>
                        <% users.forEach((u, idx) => { %>
                            <tr>
                                <td><%= idx + 1 %></td>
                                <td><%= u.username %></td>
                                <td><span class="badge <%= u.role_name==='super_admin' ? 'bg-danger' : u.role_name==='admin' ? 'bg-primary' : 'bg-secondary' %>"><%= u.role_name %></span></td>
                                <td><span class="badge <%= u.is_active ? 'bg-success' : 'bg-warning' %>"><%= u.is_active ? 'Active' : 'Inactive' %></span></td>
                                <td><%= new Date(u.created_at).toLocaleString('vi-VN') %></td>
                                <td class="text-end">
                                    <a href="/users/view/<%= u.id %>" class="btn btn-sm btn-outline-primary">Chi tiết</a>
                                    <% if (currentUserRole==='super_admin' || (currentUserRole==='admin' && u.role_name==='user')) { %>
                                        <a href="/users/delete/<%= u.id %>" class="btn btn-sm btn-danger" onclick="return confirm('Xóa?')">Xóa</a>
                                    <% } %>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-header bg-white fw-bold">Tạo người dùng</div>
            <form class="card-body" action="/users/create" method="POST">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Username</label>
                        <input type="text" name="username" class="form-control" required>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Password</label>
                        <input type="text" name="password" class="form-control" required>
                    </div>
                <div class="col-md-4">
                    <label class="form-label">Role</label>
                    <select name="role_id" class="form-select">
                            <% roles.forEach(r => { %>
                                <option value="<%= r.id %>"><%= r.name %></option>
                            <% }) %>
                    </select>
                </div>
                </div>
                <div class="mt-3 text-end">
                    <button class="btn btn-primary">Tạo</button>
                </div>
            </form>
        </div>
    </div>
    <%- include('../partials/footer') %>
</body>
</html>
