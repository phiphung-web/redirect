<% if (typeof breadcrumb !== 'undefined' && breadcrumb && breadcrumb.length) { %>
  <div class="bg-white border-bottom px-4 py-2">
    <% breadcrumb.forEach((bc, idx) => { %>
      <% if (bc.url) { %>
        <a href="<%= bc.url %>" class="text-decoration-none"><%= bc.label %></a>
      <% } else { %>
        <span><%= bc.label %></span>
      <% } %>
      <% if (idx < breadcrumb.length - 1) { %> / <% } %>
    <% }) %>
  </div>
<% } %>
<% if (typeof backUrl !== 'undefined' && backUrl) { %>
  <div class="bg-light px-4 py-2">
    <a href="<%= backUrl %>" class="text-decoration-none"><i class="fas fa-arrow-left me-1"></i>Quay lại</a>
  </div>
<% } %>
